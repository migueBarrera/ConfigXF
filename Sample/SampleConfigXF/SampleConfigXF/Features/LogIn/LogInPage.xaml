<?xml version="1.0" encoding="utf-8" ?>
<framework:BaseContentPage
    x:Class="SampleConfigXF.Features.LogIn.LogInPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:framework="clr-namespace:SampleConfigXF.Framework"
    xmlns:local="clr-namespace:SampleConfigXF.Features.LogIn"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:TypeArguments="local:LogInViewModel"
    mc:Ignorable="d">
    <ContentPage.Content>
        <StackLayout>
            <Label
                HorizontalOptions="CenterAndExpand"
                Text="{Binding TestText}"
                VerticalOptions="CenterAndExpand" />
            <Button Command="{Binding ClickButtonCommand}" Text="TaskHelper Test" />
        </StackLayout>
    </ContentPage.Content>
</framework:BaseContentPage>